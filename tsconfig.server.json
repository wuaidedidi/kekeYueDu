{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": ".tmp/server",
    "types": ["node"]
  },
  "include": [
    "server/**/*.ts",
    "config.ts"
  ]
}