{
  "name": "my-vue-app",
  "private": true,
  "version": "0.0.0",
  "main": "dist/electron-main/index.js",
  "type": "module",
  "scripts": {
    "lint": "eslint . --max-warnings 10",
    "lint:fix": "eslint . --fix",
    "lint:js": "eslint src --ext .js,.vue --max-warnings 10",
    "lint:server": "eslint server --max-warnings 10",
    "format": "prettier --write . --ignore-unknown",
    "format:src": "prettier --write src --ignore-unknown",
    "format:server": "prettier --write server --ignore-unknown",
    "type-check": "vue-tsc --noEmit",
    "type-check:server": "tsc --noEmit --project tsconfig.json",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "dev": "vite",
    "dev:full": "node --loader ts-node/esm scripts/dev-coordinator.ts",
    "server:build": "tsc -p tsconfig.server.json",
    "server:dev": "npm run server:build && node .tmp/server/server/server.js",
    "build": "rimraf dist && vite build && electron-builder",
    "preview": "vite preview",
    "start": "electron dist/electron-main/index.js",
    "build:renderer": "vite build",
    "build:main": "tsc --project tsconfig.json",
    "init-db": "node scripts/init-db.js",
    "analyze:images": "node scripts/optimize-images.cjs",
    "analyze:bundle": "npm run build:renderer && npx rollup-plugin-visualizer dist",
    "perf:report": "npm run build:renderer && npm run preview"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dompurify": "^3.3.0",
    "dotenv": "^17.2.3",
    "echarts": "^5.5.1",
    "element-plus": "^2.8.5",
    "express": "^4.21.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jimp": "^1.6.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^15.0.8",
    "multer": "^2.0.2",
    "pangu": "^7.2.0",
    "pinia": "^2.2.2",
    "sanitize-html": "^2.17.0",
    "sass": "^1.78.0",
    "segment": "^0.1.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "trix": "^2.1.5",
    "uuid": "^13.0.0",
    "vue": "^3.4.37",
    "vue-router": "^4.4.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@rollup/plugin-commonjs": "^28.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.4",
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "@vitejs/plugin-vue": "^4.2.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/electron": "^11.0.3",
    "concurrently": "^9.1.2",
    "electron": "32.0.1",
    "electron-builder": "^25.0.5",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vue": "^9.28.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^27.2.0",
    "mock-aws-s3": "^4.0.2",
    "nock": "^13.5.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "terser": "^5.44.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "unplugin-auto-import": "^0.18.2",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^4.4.0",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-vue": "^0.0.1",
    "vitest": "^4.0.8",
    "vue-tsc": "^2.1.6"
  },
  "build": {
    "appId": "com.smallpig.desktop",
    "productName": "smallpig",
    "asar": true,
    "copyright": "Copyright © 2022 smallpig",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://127.0.0.1:8080"
      }
    ],
    "releaseInfo": {
      "releaseNotes": "版本更新的具体内容"
    }
  }
}
