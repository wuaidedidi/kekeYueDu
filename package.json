{
  "name": "my-vue-app",
  "private": true,
  "version": "0.0.0",
  "main": "dist/electron-main/index.js",
  "type": "module",
  "scripts": {
    "lint": "eslint 'src/**/*.{js,ts,vue}'",
    "lint:fix": "eslint 'src/**/*.{js,ts,vue}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts,vue,json,md}'",
    "dev": "vite",
    "dev:full": "concurrently \"npm run dev\" \"node server/index.cjs\"",
    "build": "rimraf dist && vite build && electron-builder",
    "preview": "vite preview",
    "start": "electron dist/electron-main/index.js",
    "build:renderer": "vite build",
    "build:main": "tsc --project electron-main/tsconfig.json",
    "init-db": "node scripts/init-db.js"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/uuid": "^11.0.0",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dompurify": "^3.3.0",
    "dotenv": "^17.2.3",
    "echarts": "^5.5.1",
    "element-plus": "^2.8.5",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^15.0.8",
    "multer": "^2.0.2",
    "pangu": "^7.2.0",
    "pinia": "^2.2.2",
    "sass": "^1.78.0",
    "segment": "^0.1.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "trix": "^2.1.5",
    "uuid": "^13.0.0",
    "vue": "^3.4.37",
    "vue-router": "^4.4.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.4",
    "@types/sqlite3": "^3.1.11",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "@vitejs/plugin-vue": "^4.2.0",
    "@vueuse/electron": "^11.0.3",
    "concurrently": "^9.1.2",
    "electron": "32.0.1",
    "electron-builder": "^25.0.5",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vue": "^9.28.0",
    "mock-aws-s3": "^4.0.2",
    "nock": "^13.5.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "unplugin-auto-import": "^0.18.2",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^4.4.0",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-vue": "^0.0.1",
    "vue-tsc": "^2.1.6"
  },
  "build": {
    "appId": "com.smallpig.desktop",
    "productName": "smallpig",
    "asar": true,
    "copyright": "Copyright © 2022 smallpig",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://127.0.0.1:8080"
      }
    ],
    "releaseInfo": {
      "releaseNotes": "版本更新的具体内容"
    }
  }
}
